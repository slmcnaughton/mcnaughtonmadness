            <h4><%=tournamentGroup.tournamentReference.year%> Tournament</h4>
            <h5>Commissioner: <%=tournamentGroup.commissioner.name%></h5>
            <p><em><%=tournamentGroup.groupMotto%></em></p>
        </div>
        <div class="standingsInfo roundStartTimes col-xs-12 col-sm-5">
            <h4>Round Tip Off Times:</h4>
            <% for (var i = 0; i < tournamentGroup.tournamentReference.id.rounds.length; i++) { %>
                <% var roundDateTime = moment(tournamentGroup.tournamentReference.id.rounds[i].startTime).tz("America/New_York").format('LLLL')  %>
            
                <h6>Round <%=i + 1 %>: <%=roundDateTime%></h6>
            <% } %>
        </div>
